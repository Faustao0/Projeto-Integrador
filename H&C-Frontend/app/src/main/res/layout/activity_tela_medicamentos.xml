<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f3f4f6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicação"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:fontFamily="sans-serif-medium"/>

    <EditText
        android:id="@+id/nome_remedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Remédio"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/dosagem_remedio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosagem (mg)"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/frequência"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Frequência"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/fabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fabricante"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:fontFamily="sans-serif"/>

    <EditText
        android:id="@+id/horario_tomar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horário de Tomar"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:fontFamily="sans-serif"/>

    <Button
        android:id="@+id/salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>